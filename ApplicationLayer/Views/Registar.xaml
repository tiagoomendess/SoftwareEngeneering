      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationLayer.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="625"
      Title="Quiosque - Pedido de Registo">

    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="NIF" VerticalAlignment="Top" Margin="99,83,0,0"/>
        <TextBox Name="nif" HorizontalAlignment="Left" Height="23" Margin="99,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128"/>

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Margin="99,145,0,0" RenderTransformOrigin="0.621,3.479"/>
        <TextBox Name="email" HorizontalAlignment="Left" Height="23" Margin="99,166,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128"/>

        <Button Click="PedirAcesso" Content="PEDIR ACESSO" HorizontalAlignment="Left" Height="53" Margin="99,216,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="-0.264,-0.747"/>

        <Button Click="RegistaDados" Content="JÁ TENHO CODIGO" HorizontalAlignment="Left" Height="53" Margin="386,194,0,0" VerticalAlignment="Top" Width="128"/>

    </Grid>
</Page>
